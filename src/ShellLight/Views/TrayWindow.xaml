<controls:ChildWindow x:Class="ShellLight.Views.TrayWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="200" Height="300"
           Title="TrayWindow" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,40" Style="{StaticResource ChildWindowStyle}">
    <Border x:Name="LayoutRoot" Margin="5,5,5,5">
        <ContentControl x:Name="Content" HorizontalContentAlignment="Stretch" />
    </Border>
</controls:ChildWindow>